<label class='d-flex mt-3 align-items-center'>
  <div class="flex-grow-1 me-2">
    <div class='kando-font fs-2'>
      {{label}}
    </div>
    <div class='fs-5 only-if-checked'>
      {{#if checkedHint}}
        {{checkedHint}}
      {{else}}
        {{hint}}
      {{/if}}
    </div>
    <div class='fs-5 if-not-checked'>
      {{hint}}
    </div>
  </div>
  <input type="checkbox" class="form-check-input m-0" id="{{id}}" />
</label>
